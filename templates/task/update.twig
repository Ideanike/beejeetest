{% extends "layout.twig" %}

{% block title %}Update Task{% endblock %}

{% block content %}
    <h1>Update Task</h1>
    <div>
    <form method="post" action="/task/update/{{ task.getId }}">
        <div class="form-group">
            <label for="content">Content</label>
            <textarea id="content" name="content" class="form-control" rows="3">{{ task.getContent }}</textarea>
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="status" {% if task.getStatus %} checked="checked" {% endif %}> Status completed
            </label>
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    </form>
    </div>
    <br>
    {% if errors|length > 0 %}
        <div class="alert alert-danger" role="alert">
            {% for error in errors %}
                <p>{{ error }}</p>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}